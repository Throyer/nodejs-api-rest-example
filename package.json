{
  "name": "nestjs-api-rest-example",
  "version": "0.0.1",
  "description": "nestjs rest api example",
  "author": "Throyer",
  "private": true,
  "license": "GNU General Public License v3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "prestart:dev": "npm install",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "prestart:prod": "node ./node_modules/typeorm/cli.js --config dist/database/index.js migration:run",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config src/database/index.ts",
    "migration:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:create -n",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:run",
    "migration:show": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:show",
    "migration:rollback": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:revert",
    "migration:drop-create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts schema:drop && ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:run",
    "seed:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:create -c seed -n",
    "seed:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/index.ts migration:run -c seed",
    "container:bash": "docker exec -it nestjs-example-api",
    "container:stop": "docker stop nestjs-example-api",
    "container:start": "docker start nestjs-example-api",
    "container:logs": "docker logs nestjs-example-api -f",
    "compose:up": "docker-compose up -d --build --force-recreate",
    "compose:down": "docker-compose down"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/typeorm": "8.0.0",
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.28.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
